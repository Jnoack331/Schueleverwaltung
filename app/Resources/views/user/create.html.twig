{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <a href="{{ path('users_index') }}" class="button button--white">Zur√ºck zur Ansicht</a>
    <h1>Benutzer erstellen</h1>

    <form method="post" class="form">
        <dl>
            <dt>
                <label for="name">Name:</label>
            </dt>
            <dd>
                <input name="name" id="name" value="">
            </dd>

            <dt>
                <label for="email">E-Mail:</label>
            </dt>
            <dd>
                <input name="email" id="email" value="">
            </dd>

                <dt>
                    <label for="role">Rolle</label>
                </dt>
                <dd>
                    <select name="role" id="role">
                        <option value="ROLE_ADMIN">Systembetreuer</option>
                        <option value="ROLE_AZUBI">Azubi</option>
                        <option value="ROLE_MANAGE">Verwaltung</option>
                        <option value="ROLE_TEACHER">Lehrer</option>
                    </select>
                </dd>

                <dt>
                    <label for="plain_password">Passwort:</label>
                </dt>
                <dd>
                    <input name="plain_password" id="plain_password" value="" type="password">
                </dd>
            </dl>

        <div class="form__button-wrap">
            <input type="submit" class="button button--primary" value="Erstellen">
        </div>
    </form>
{% endblock %}
