{% extends 'base.html.twig' %}

{% block body %}
    <h4>Benutzer Bearbeiten</h4>
    <a href="{{ path('users_index') }}" class="button button--primary">Zur√ºck</a>
    <form method="post" class="form">
        <dl>
            <dt>
                <label for="user_name">Name:</label>
            </dt>
            <dd>
                <input name="user_name" id="user_name" value="{{ user.name }}">
            </dd>

            <dt>
                <label for="user_email">E-Mail:</label>
            </dt>
            <dd>
                <input name="user_email" id="user_email" value="{{ user.email }}">
            </dd>

            <dt>
                <label for="user_email">Rolle</label>
            </dt>
            <dd>
                <select name="user_role" id="user_role">
                    <option value="ROLE_ADMIN" {% if user.hasRole('ROLE_ADMIN') %} selected {% endif %}>Admin</option>
                    <option value="ROLE_AZUBI" {% if user.hasRole('ROLE_AZUBI') %} selected {% endif %}>Azubi</option>
                    <option value="ROLE_MANAGE" {% if user.hasRole('ROLE_MANAGE') %} selected {% endif %}>Verwaltung</option>
                    <option value="ROLE_TEACHER" {% if user.hasRole('ROLE_TEACHER') %} selected {% endif %}>Lehrer</option>
                </select>
            </dd>

            <dt>
                <label for="plain_password">Neues Passwort:</label>
            </dt>
            <dd>
                <input name="plain_password" id="plain_password" value="{{ user.email }}">
            </dd>

            <dt>
                <label for="plain_password_confirm">Passwort wiederholen:</label>
            </dt>
            <dd>
                <input name="plain_password_confirm" id="plain_password_confirm" value="{{ user.email }}">
            </dd>
        </dl>

        <input type="submit" class="button button--primary" value="Speichern">
    </form>

{% endblock %}
