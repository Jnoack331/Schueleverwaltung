{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <a href="{{ path('users_index') }}" class="button button--white">Zurück zur Ansicht</a>
    <h1>Benutzer Bearbeiten</h1>

    <form method="post" class="form">
        <dl>
            <dt>
                <label for="name">Name:</label>
            </dt>
            <dd>
                <input name="name" id="name" value="{{ user.name }}" required="required">
            </dd>

            <dt>
                <label for="email">E-Mail:</label>
            </dt>
            <dd>
                <input type="email" name="email" id="email" value="{{ user.email }}" required="required">
            </dd>

            <dt>
                <label for="role">Rolle:</label>
            </dt>
            <dd>
                <select name="role" id="role" required="required">
                    <option value="ROLE_ADMIN" {% if user.hasRole('ROLE_ADMIN') %} selected {% endif %}>Systembetreuer</option>
                    <option value="ROLE_AZUBI" {% if user.hasRole('ROLE_AZUBI') %} selected {% endif %}>Azubi</option>
                    <option value="ROLE_MANAGE" {% if user.hasRole('ROLE_MANAGE') %} selected {% endif %}>Verwaltung</option>
                    <option value="ROLE_TEACHER" {% if user.hasRole('ROLE_TEACHER') %} selected {% endif %}>Lehrer</option>
                </select>
            </dd>

            <dt>
                <label for="plain_password">Neues Passwort:</label>
            </dt>
            <dd>
                <input type="password" name="plain_password" id="plain_password" value="">
            </dd>
        </dl>
            <input type="submit" class="button button--primary" value="Speichern">
    </form>
    <form action="{{ url('room_delete', {"id": user.getId()}) }}" method="post" class="form">
        <input type="submit" class="button button--warning" value="Raum Löschen">
    </form>
{% endblock %}
