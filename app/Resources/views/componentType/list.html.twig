{% extends "base.html.twig" %}

{% block body %}
<div class="wrap wrap--content">
    <main>
        <h4>Komponentenarten verwalten</h4>
        <table>
            <thead><tr>
                <th>Name</th>
                <th>Attribute</th>
                <th colspan="2">Interaktionen</th>
            </tr></thead>
            <tbody>
            {% for componenttype in componenttypes %}
                <tr>
                    <td>{{ componenttype.getType() }}</td>
                    <td>{{ componenttype.getAttributeNames() }}</td>
                    <td class="table__action"><a href="{{ url('component_kind_edit', {"id": componenttype.getId()}) }}">Bearbeiten</a></td>
                    <td class="table__action"><a href="{{ url('component_kind_delete', {"id": componenttype.getId()}) }}">LÃ¶schen</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p class="table__hint">Scrollbar ></p>
        <hr>
        <a href="{{ url('component_kind_create') }}" class="button button--primary">Neuen Komponentenart erstellen</a>
    </main>
 </div>
{% endblock %}