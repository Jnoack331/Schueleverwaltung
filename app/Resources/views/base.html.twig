<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}IT-Verwaltung{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("bundles/app/css/main.css") }}">
        {% endblock %}
        <script src="{{ asset('bundles/app/js/lib/jquery.min.js') }}"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/app/img/b3-favicon.png') }}" />
    </head>
    <body>
        {% block header %}
            {% include "@App/header.html.twig" %}
        {% endblock %}
        <div class="wrap wrap--content">
            <main>
                {% if message is defined %}
                    {% if message %}
                        <p class="alert alert--neutral"><strong>Hinweis: </strong>{{ message }}</p>
                    {% endif %}
                {% endif %}

                {% block body %}{% endblock %}
            </main>
        </div>
        {% block javascripts %}{% endblock %}
        {% block footer %}
            {% include "@App/footer.html.twig" %}
        {% endblock %}
    </body>
</html>
