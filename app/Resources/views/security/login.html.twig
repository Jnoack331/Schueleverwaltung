{% extends 'base.html.twig' %}

{% block body %}
    <h1>Login</h1>
    <form action="{{ path('login') }}" method="post" class="form">
        <dl>
            <dt>
                <label for="email">Email Address</label>
            </dt>
            <dd>
                <input type="email" class="form-control" id="username" name="_username"
                       {% if last_username %}value="{{ last_username }}"{% else %} placeholder="Email" {% endif %}>
            </dd>
            <dt>
                <label for="password">Password</label>
            </dt>
            <dd>
                <input type="password" class="form-control" id="password" name="_password"
                       placeholder="Password"
                       required="required">
            </dd>
        </dl>
        <input type="submit" class="button button--primary" id="login-button" value="Login">
    </form>
{% endblock %}